<h1><%= image_tag 'icons/comments.png'%> <%= I18n.t('comment.index.title') %></h1>
<%#= ['all', 'posted', 'validated', 'rejected'].map{ |s| link_to(I18n.t('comment.state.'+s), comments_url(:on_state => s))}.join(' | ') %>
<div id="object-list" class="comment_list">
  <div id="classify_bar">
    <img width="20" src="/images/icons/filter.png"/>
    <%= ['all', 'posted', 'validated', 'rejected'].map{ |s| link_to(I18n.t('comment.state.'+s), admin_comments_path(:on_state => s))}.join(' | ') %>
  </div>
  <div id="content">
    <%= render :partial => 'comments/user_comments' %>
  </div>
  <%= will_paginate @paginated_objects %>
</div>

