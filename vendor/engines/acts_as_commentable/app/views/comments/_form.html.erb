  <h1><%= @current_object.new_record? ? I18n.t('comment.new.title') : I18n.t('comment.edit.title') %></h1>
  <% form_for ['admin', @current_object], :builder => BlankFormBuilder do |f| %>

    <%= @current_object.commentable_type+' : '+@current_object.commentable.title %>
    <%= f.text_area :text, :label => I18n.t('comment.field.text') %>
    <%#= f.text_field :email, :label => I18n.t('comment.field.text') %>
    <%#= f.text_field :nickname, :label => I18n.t('comment.field.text') %>

    <%= f.select :state, ['posted', 'validated', 'rejected'], :label => I18n.t('comment.field.state') %>

	<button type="submit" class="submitButton"><span>
		<%= @current_object.new_record? ? I18n.t('general.button.create') : I18n.t('general.button.update')%>
	</span></button>

  <% end %>