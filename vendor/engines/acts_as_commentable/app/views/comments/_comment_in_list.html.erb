<div class="commentbox">
  	<div class="commentText"><%= object.text %></div>
	<div class="commentNumber"><%= comment_in_list_counter + 1 %></div>
</div>
<div class="commentfooter">
  	<%= link_to_user User.find(object.user_id) %> - <%= I18n.l object.created_at, :format => :verb %> -
	<%= link_to_function 'Reply', :onclick => "add_reply('#{object.id}')", :class => "commentfooterReply" %>
</div>
<% if object.replies.size > 0 %>
<div id="reply_for_comment_<%= object.id %>" class="commentReply">
    <%= render :partial => 'comments/reply', :collection => object.replies %>
</div>
<% end %>

