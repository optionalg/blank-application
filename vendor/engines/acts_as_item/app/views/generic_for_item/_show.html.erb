<%h content_for :title, "#{object.class.to_s}: "+object.title %>
<div class="itemShowLeft">
	<div class="itemShowLeftDate">
		<%= I18n.l object.created_at, :format =>:verb %>
	</div>
	<div class="itemShowLeftBody">
		<h1><%= object.title %></h1>
		<%= keywords_links_list_for(@current_object) %>
	
		<div class="itemDescription"><%= object.description %></div>
		
		<%= capture(&block) %>
		
		<%= print_comments_part(object) %>
	</div>
</div>
<div class="itemShowRight">
	<div class="itemShowRightBlock">
		<div class="blockHeader">
			What can I do?
		</div>
		<div class="blockBody">
			<%= link_to "Go back to Workspace", (current_workspace ? admin_workspace_path(current_workspace.id) + '?item_type=' : 'admin/content/') + object.class.to_s.underscore.pluralize %>
			
			<% if object.has_permission_for?('add', @current_user) %>
			<a href="<%=new_item_path(object.class.to_s)%>"><%= I18n.t('layout.application.add_content')%></a>
			<% end %>
			<% if @current_object.has_permission_for?('edit', @current_user)  %>
		      	<%= link_to "Edit", edit_item_path(object)%>
		    <% end %>
			<% if @current_object.has_permission_for?('destroy', @current_user) %>
		      	<%= link_to "delete", item_path(object), :method => :delete, :confirm =>  I18n.t('item.destroy.delete_conform')%>
		    <% end %>
			<%= link_to "print", 'javascript:window.print();' %>
			<% if @current_object.has_permission_for?('rate', @current_user) %>
		          <%= link_to "rate", '#', :id => :rate_action %><%# item_rate(object) %>
		    <% end %>
		</div>
	</div>
	<div class="itemShowRightBlock">
		<div class="blockHeader">User</div>
		<div class="blockBody">
			<p><%= link_to_user object.user %></p>
			
			<p><%= object.comments_number %> <%= object.comments_number > 1 ? I18n.t("item.common_word.comment").pluralize : I18n.t("item.common_word.comment")%></p>
			<p><%= item_rate_locked(object) %></p>
		</div>
	</div>
	<div class="itemShowRightBlock">
		<div class="blockHeader"><%= I18n.t("item.show.associated_workspace") %></div>
		<div class="blockBody">
			<% for ws in object.workspaces -%>
	          <%= link_to ws.title, admin_workspace_path(ws) %>
	        <% end -%>
		</div>
    </div>
</div>