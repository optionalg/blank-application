body {
	font-family:"Lucida Grande", "Bitstream Vera Sans", Helvetica, Verdana, Arial, sans-serif;
	margin: 0px;
	padding: 0px;
	font-size: 10pt;
	color: #9C9C9C;
	background-color: #2B2D2C;
	text-align: center;
}

a{
	text-decoration: none;
	color:#666;
}

a:hover {
	color: #333;
  	text-decoration: underline;
}

a.add_item{
	display: block;
	margin-top: 30px;
}

.clear{
  clear: both;
}

.spaces {
  margin: 10px 0px 20px 0px;
}

#page_container {
	width: 1000px;
	margin: 0 auto;
	background-color:#fff;
	text-align:left;
}

#container {
  width: 1000px;
  text-align: left;
}

#header {
	background-color:#fff;
	color: white;
	height: 103px;
	padding-top:20px;
	background:url('/images/backHeader.jpg') no-repeat;
}

#header_right{
	float:right;
	margin-right: 10px;
	margin-top: 10px;
	width: 500px;
	height:80px;
}

#page_container #container h1 {
	color: #F79646; 
	font-size: 175%;
}

#area_TITLE a{
	color: #F79646
}

#area_TITLE p{
	margin:0;
	font-size:80%;
	color: #9C9C9C;
}

#page_container #container h2 {
	font-size: 125%;
	color:#F79646;
}

#page_title {
	font-size:250%;
	left:233px;
	position:absolute;
	top:4px;
	z-index:2;
}
#logo {
	margin-left:20px;
	padding-top:10px;
	height: 80px;
	width: 400px;
	float: left;
	padding-bottom: 10px;
}
#main_links {
	font-size: 80%;
	margin-bottom: 30px;
	text-align: right;
    color:#9C9C9C;
}
#main_links a {
	color:#F79646;
	text-decoration: none;
}
#main_links a:hover {
	text-decoration: underline;
}

#content h2{
	width: 100%;
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: #f2F2F2;
	padding-bottom: 0.3em;
	font-size: 125%;
	margin-top: 20px;
}

#content h3{
	padding-bottom: 0px;
	margin-bottom: 0px;
}

#content_show{
	width: 800px;
	margin: 0px auto;
}

#area_PROFIL {
	line-height: 18px;
	float: left;
	padding-left: 0.5em;
	padding-right: 0.5em;
	width: 100%;
}

#area_PROFIL label, #area_DROITS label {
	font-weight: bold;
	color: #666;
}
#area_PROFIL .avatar {
	border: 1px solid #666666;
	margin-right:10px;
	margin-top:30px;
}

#area_DROITS {
	float: right;
	width: 47%;
	padding: 0.5em;
	background-color:<%=@ws.bgcolor%>;
	border: 1px solid <%=@border.bgcolor%>;
}
#area_DROITS h2 {
	color: #FFFFFF !important;
}

#area_USERS {
	margin-bottom: 1em;
	line-height: 20px;
	padding: 0.5em;
	background-color: #D2A7BB;
	border: 1px solid #BD7F9C;
}
#area_USERS h2 {
	color: #FFFFFF;
	border: none;
	margin-top: 0px;
	padding: 10px 0px 20px 0px;
}
#area_USERS a {
	color: #7C0041;
	text-decoration: none;
}
#area_USERS a:hover {
	text-decoration: underline;
}
#area_POST {
	width: 98%;
	margin-bottom: 1em;
	margin-top: 40px;
	float: left;
}

#area_POST_bis {
	width: 47%;
	margin-bottom: 1em;
	margin-top: 0px;
	float: left;
}

#area_POST_bis .titre{
	width: 98%;
	margin-bottom: 1em;
	float: left;
}
#area_ADDED {
	width: 47%;
	padding: 0.5em;
	float: left;
}
#area_COMMENTS {
	float: right;
	width: 47%;
	padding: 0.5em;
	font-size: 12px;
}

#area_COMMENTS .titre {
	font-size: 14px;
	color: #000000;
}
#area_COMMENTS  .item {
	margin-bottom: 0.5em;
	line-height: 14px;
	padding: 0.3em;
}
#area_ONLINE {
	width: 79%;
	margin-bottom: 1em;
	line-height: 20px;
	padding: 0.5em;
	background-color: #E3EFF2;
	border: 1px solid #BDD6D9;
	float: left;
}

#area_CONTENUS  .titre {
	width: 100%;
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: #666666;
	padding-bottom: 0.3em;
	font-size: 125%;
}
#area_CONTENUS  .titre  img {
	margin-right: 0.5em;
}

.formError {
	display: inline;
	color: red;
	margin-left: 10px;
}

div.autocomplete {
  position:absolute;
  width:250px;
  background-color:white;
  border:1px solid #888;
  margin:0px;
  padding:0px;
}

div.autocomplete ul {
  list-style-type:none;
  margin:0px;
  padding:0px;
}
div.autocomplete ul li.selected { background-color: #ffb;}
div.autocomplete ul li {
  list-style-type:none;
  display:block;
  margin:0;
  padding:2px;
  height:32px;
  cursor:pointer;
}

.item {
	padding: 0.2em;
	width: 95%;
	line-height: 18px;
	margin-bottom: 0.4em;
}

.item name {

}

.item .window {
	color: black !important;
	display:inline;
	margin-left:50em;
	padding:0.7em;
	position:absolute;
	width:20em;
	margin-top:-7px;
}

.item span
{
	display: inline-block;
	overflow: hidden;
}

.item .window div {
	margin-bottom: 0.4em;
}

.hidden {
	display: none !important;
	font-size: 80%;
	padding-left: 2em;
}

a img {
	border: none
}


.txt_80_333 {
	color: #333333;
	font-size: 80%;
}

.txt_80_666_bis {
	font-size: 90%;
}

.txt_80_666 {
	font-size: 80%;
	color: #666666;
}

.txt_80_666 p{
	margin:0px;
}
.txt_70_666 {
	font-size: 80%;
	color: #666666;
}


.comment_box{
	margin-left: 0px;
}

#footer{
	color:#2B2D2C;
	height:12px;
	margin-bottom:20px;
	margin-top:10px;
	padding:15px;
	background:#eee url('/images/backfooter.jpg') no-repeat 0px 27px;
}

#footer a{
	color:#F79646;
}

#footer .name{
  float:left;;
}

#footer .menu{
  float: right;
  font-size: 90%;
  color:#F79646;
}