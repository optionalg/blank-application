fieldset p{
  font-size:11px;
  font-weight: bold;
  margin-bottom:10px;
  padding-bottom:10px;
}

fieldset label{
	padding-top:13px;
	text-align:right;
	vertical-align:top;
	width:180px;
	font-weight:bold;
    margin-right: 10px;
	float:left;
	clear:both;
}

fieldset legend{
	background:#FAFAFA none repeat scroll 0 0;
	border:1px solid #C2C2C2;
	font-size:110%;
	margin-bottom:15px;
	margin-left:10px;
	padding:5px;
}

fieldset legend img{ 
	margin-right:5px;
}

fieldset .hint{
  display:block;
  font-size:11px;
  font-weight:normal;
  text-align:right;
  width:100%;
}

fieldset input, fieldset textarea{
	border:1px solid #c2c2c2;
	width:90%;
	font-size:15px;
}

.formElement{
	float:left;
	width:70%;
	margin-top:10px;
}

.spacer{clear:both; height:1px;}

fieldset{
	background-color: #EEEEEE;
	padding: 1em;
	border: 1px solid #C2C2C2;
	margin:0;
	color:#666;
}

/* BUTTONS */
.user label{
  clear: left;
  width: 200px;
  text-align: right;
  padding-right: 10px;
  margin-top: 5px;
  color: #7B003B;
  float: left;
}

.user select{
  width: 150px;
  float: left;
  margin-top: 5px;
} 

.user a{
  float: left;
  margin-top: 5px;
  margin-left: 10px;
}

.submit_button{
	background:transparent url(/images/button.png) no-repeat scroll 0 20px;
border:medium none;
clear:both;
color:#FFFFFF;
display:block;
font-weight:bold;
height:auto;
margin:0px 0 10px 235px;
overflow:visible;
padding:30px;
width:250px;
}

.checkBoxElement{
	width:auto;
	border:0;	
}

.ajax_hint_message{
	margin-left:10px;
}