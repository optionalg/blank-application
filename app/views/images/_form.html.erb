<% form_for_item @current_object do |f| -%>
	<%= f.label :file_path, "Fichier :"%><br />
	<% if @current_object.file_path %>
		<%= image_tag url_for_file_column(@current_object, :file_path, "web") %><br />
	<% end %>
	<%= error_message_on :artic_file, :file_path %><br/>
	<%= File.basename(@current_object.file_path) + '<br />' if @current_object.file_path %>
	<%= file_field 'image', 'file_path',:onChange=>"LimitAttach(this.form, this.form.image_file_path.value,'image')" %><br />		
<% end -%>
