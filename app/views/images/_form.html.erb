<% form_for_item @current_object, title do |f| -%>

  <% f.field :image, :label => I18n.t('general.file') + " :" do %>
    <%= File.basename(@current_object.image_file_name) + '<br />' if @current_object.image_file_name %>
    <%= file_field 'image', 'image',:onChange=>"LimitAttach(this.form, this.form.image_image.value,'image')" %>
  <% end %>

<% end -%>
