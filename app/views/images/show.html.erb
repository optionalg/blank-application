<% item_show( :title => 'Image',  :object => @current_object ) do %>
	<h2><%=I18n.t('general.picture')%></h2>

	<%= File.basename @current_object.image_file_name %>
	<br />
	<%= link_to(
			image_tag(@current_object.image.url(:medium)), @current_object.image.url.split("?")[0]) %>
	<br />

<% end %>
