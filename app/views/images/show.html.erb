<% item_show( :title => 'Image',  :object => @current_object ) do %>

	<%= File.basename @current_object.file_path %>
	<br />
	<%= link_to(
			image_tag(url_for_file_column(@current_object, :file_path, "web")),
			url_for_file_column(@current_object, :file_path)) %>
	<br />
	<%= link_to "Télécharger", url_for_file_column(@current_object, :file_path) %>

<% end %>
