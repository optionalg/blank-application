<div id="workspace_<%= object.id.to_s %>" class="item_in_list">
<% if @i%2 == 0 -%>
  <div class="sensor_in_list_alternate" onclick="toggleAccordion('itemInformations_<%=@i%>');">
  <% else -%>
    <div class="sensor_in_list" onclick="toggleAccordion('itemInformations_<%=@i%>');">

    <% end -%>
    <div class="left_part_sensor">
      <a id="items_link" ><%= object.title %></a>
    </div>
    <div class="right_part_sensor"><%= I18n.l object.created_at, :format =>:verb %></div>
  </div>
  <div id="itemInformations_<%=@i%>" style="display:none;" name="itemInformations">
    <div class="lift_items">
      <div align="right">
        <%= link_to image_tag("/images/icons/play.png", :width => "20"), workspace_path(object.id) %>
        <% if object.has_permission_for?('edit', @current_user) %>
          <%= link_to image_tag("/images/icons/pencil.png", :width => "20"), edit_workspace_path(object.id) %>
        <% end %>
        <% if object.has_permission_for?('destroy', @current_user) %>
          <%= link_to image_tag("/images/icons/delete.png", :width => "20"), workspace_path(object.id), :method => :delete, :confirm =>  I18n.t('item.destroy.delete_conform')%>
        <% end %>
      </div>
      <ul>
        <% object.roles.uniq.each do |r| %>
          <li>
            <%= I18n.t('general.role.'+r.name)%> :
            <%= object.users_by_role(r.name).map{|u| link_to u.full_name , user_path(u.id) }.join(', ') %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <% @i += 1%>
</div>