<div id="right-container">
	<div id="right_menu">
		<span class="titre">Filtrer</span><br>
		<ul>
			<% 
				[:article, :image, :cms_file, :video, :audio, :publication].each do |elem|
					model = elem.to_s.classify.constantize
					
					helper_name = String.new
					helper_name += 'workspace_' if current_workspace
					helper_name += "#{elem.to_s.pluralize}_path"
					
					args = []
					args << current_workspace if current_workspace
										
					concat\
						content_tag(:li, link_to(model.label.pluralize, send(helper_name, *args)),
							:style => "list-style-image:url(/images/#{model.icon});list-style-position:inside"),
						binding
				end
			%>
		</ul>
	</div>
	<div id="Add_menu">
		<span class="titre"><%=I18n.t('general.add')%></span><br>
		<div id="slct_ADD">
			<form name="form1" method="post" action="" id="form1">
				<select name="slct_filtre" id="slct_filtre" onchange="document.location.href = this.value">
					<option selected value='#'>
						--------
					</option>
					<option value="<%= new_item_path(Article) %>">
						<%=I18n.t('layour.article')%>
					</option>
					<option value="<%= new_item_path(Image) %>">
						<%=I18n.t('general.image')%>
					</option>
					<option value="<%= new_item_path(Audio) %>">
						<%=I18n.t('general.audio')%>
					</option>
					<option value="<%= new_item_path(Video) %>">
						<%=I18n.t('general.video')%>
					</option>
					<option value="<%= new_item_path(CmsFile) %>">
						<%=I18n.t('general.file')%>
					</option>
					<option value="">
						<%=I18n.t('general.publication')%>
					</option>
				</select>
			</form>
		</div>
	</div>
</div>