<fieldset>
  <legend><%= title %></legend>
  <% form_for @current_object, :builder => ArticFormBuilder, :html => {:multipart => true} do |f| -%>
    
    <% is_copyright = (@current_object.state == 'copyright') ? true : false %>
    <% if is_copyright %>
    <%= f.hidden_field :state, :value => 'copyright' %>
      Certains champs ne sont pas accessibles en modifications car un copyright est présent.<br />
    <% end %>
    
    <%= f.text_field :title, :label => "Titre :", :readonly => is_copyright %>
    
    <%= f.tags_field :string_tags, :label => "Tags :", :hint => "(séparés par des espaces)" %>

    <%= f.text_field :description, :label => 'Description :', :readonly => is_copyright %>
        
    <%= capture(f, &block) %>

    <% f.field :workspaces, :label => 'Espaces de travail :' do %>
      <%= item_status_fields(f, @current_object) %>
      <%= error_message_on :current_object, :items %>
    <% end %>

    <%= f.submit current_object.new_record? ? 'Créer' : 'Mettre à jour' %>
	
  <% end -%>
</fieldset>