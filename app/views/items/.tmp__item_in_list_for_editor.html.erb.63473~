<% div_for item_in_list_for_editor do %>
  	<div class="items_for_editor">
		<%= image_tag object.icon %>
		<a href="javascript:SelectFile('<%=item_path(object)%>');"><%=object.title%></a>
		<% if object.workspaces.size > 0 %>
			 <%=I18n.t('general.in')%>&nbsp;<%= links_to_workspace_collection object.workspaces %>
		<% end %>
		<%=I18n.t('general.by')%> <%= link_to_user item_in_list_for_editor.user %>,&nbsp;
		<%=I18n.t('general.on1')%> <%= I18n.l object.created_at, :format => :long %>
	</div>
<% end %>
<script>
function SelectFile( fileUrl )
{
// window.opener.SetUrl( url, width, height, alt);
window.opener.SetUrl( fileUrl ) ;
window.close() ;
}
</script>
