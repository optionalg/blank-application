<% div_for item_in_list do %>
  <div class="item-list" style="margin-bottom:15px;">
    <div class="item_list_icon">
      <%= image_tag object.icon %>
    </div>
    <div class="item_list_body">
      <% if params[:workspace_id] != nil %>
      <div class="itme_list_item_title_small"><%= link_to object.title, item_path(object), :class => 'object_title' %></div>
	  <% else %>
	  <div class="itme_list_item_title_large"><%= link_to object.title, item_path(object), :class => 'object_title' %></div>
	  <% end %>
      <div class="item_list_item_infos">
        <div>
          <p>
            <% if object.workspaces.size > 0 %>
              <%=I18n.t('general.common_word.in')%>&nbsp;<%= links_to_workspace_collection object.workspaces %>
            <% end %>
            <%=I18n.t('general.common_word.by')%> <%= link_to_user item_in_list.user %></p>
          <p><%=I18n.t('general.common_word.on1')%> <%= I18n.l object.created_at, :format => :long %></p>
        </div>
        <div >
          <div class="item_list_rate" id="rating_<%= item_in_list.class.to_s.underscore %>_<%= item_in_list.id %>"></div>
          <div class="item_list_rate">
            <%= object.comments.count %> <%=I18n.t('item.common_word.comment').pluralize%>
            <%=I18n.t('item.common_word.rate').pluralize%> :
          </div>
        </div>
      </div>
	  <% if params[:workspace_id] != nil %>
	  <div class="item_list_item_actions">
	  	<%= link_to image_tag('icons/comments.png'), item_path(object) + "#new_comment_form_box" %>
		<% if permit? 'edition of current_object'  %>
			<%= link_to image_tag('icons/pencil.png'), edit_item_path(object)%>
	    <% end %>
	  </div>
	  <% end %>
    </div>
  </div>
  <script type="text/javascript" charset="utf-8">
    new Starbox("rating_<%= item_in_list.class.to_s.underscore %>_<%= item_in_list.id %>", <%= item_in_list.rating %>, { locked: true });
  </script>
<% end %>