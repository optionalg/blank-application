<h1><%= title %></h1>

<h2><%= object.title %></h2>

<div><%= object.description %></div>

<p id="note">
	<strong>Note:</strong>
	xxxxx
</p>

<p id="tags">
	<strong>Tags:</strong>
</p>

<% if object.workspaces.size > 1 %>
	<p id="workspaces">
		<strong>Diffus√© dans les espaces de travail suivants:</strong>
		<%= object.workspaces.collect { |w| w.name }.join("&nbsp;") %>
	</p>
<% end %>
<p>
	<%= capture(&block) %>
</p>

<p>
	<h2>Commentaires:</h2>
	<%= render :partial => "items/comment", :collection => object.comments %>
	
	<h3>Ajouter votre commentaire:</h3>
	<%= text_area_tag :new_comment, nil, :class => :comment_box %>
	<br>
	<%= submit_tag 'Ajouter' %>
</p>
