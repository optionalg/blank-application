<div id="content_show">
	<h1>
    	<%= image_tag object.icon %>
	    <%= object.title %>
	</h1>
	<div class="file_infos">
		<div class="file_infos_box">
	    	<p><%= link_to_user object.user %></p>
		    <p><%= I18n.l object.created_at, :format =>:long %></p>
		    <p><%= object.comments.size %> <%= object.comments.count > 1 ? I18n.t("general.comment").pluralize : I18n.t("general.comment")%></p>
			<p><%= item_rate_locked(object) %></p>
	   	</div>
		<div class="file_infos_box">
	   		<%= image_tag '/images/item_icons/tag_blue.png', :align => "left"%><%= tag_list(object.tags) %>
		</div>
		<div class="file_infos_box">
			<div align="right">
		    	<%= link_to image_tag('icons/rate.png'), '#', :id => :rate_action %>
			    <div id="item_rate_modal_content" style="float:left;" align="center">
			        <%= item_rate(object) %>
				</div>
	    		<script type="text/javascript" charset="utf-8">
				      content = $('item_rate_modal_content').remove().innerHTML;
				      new Tip($('rate_action'), content, {
				        showOn: 'click',
				        hook: { target: 'rightMiddle', tip: 'topLeft' },
				        hideOn: { element: 'tip', event: 'mouseout' },
						 hideOn: { element: 'tip', event: 'click' },
				        width: 100
				      });
			    </script>
	  
	    		<%= link_to image_tag('icons/comments.png'), '#new_comment_form_box' %>  
			    <%= link_to image_tag('icons/printer.png'), 'javascript:window.print();' %>
	    		<% if permit? 'edition of current_object'  %>
					<%= link_to image_tag('icons/pencil.png'), edit_item_path(object)%>
			    <% end %>
	    		<% if permit? 'deletion of current_object' %>
					<%= link_to image_tag('icons/delete.png'), item_path(object), :method => :delete,
								           :confirm =>  I18n.t('item.delete_confirm')%>
	    		<% end %>
			</div>
			<div class="output_format">
				Output format: <%= link_to 'XML', item_path(object)+".xml", :class => 'output_format_link' %>,	<%= link_to 'JSON', item_path(object)+".json", :class => 'output_format_link' %>
			</div>
  		</div>
	</div>  
	
	<div class="item_description"><%= object.description %></div>
  	
	<%= capture(&block) %>
  
	<div id="comment_list">
    	<h2><%= image_tag 'icons/comments.png'%><%=I18n.t('general.comment').pluralize%></h2>
		<div class="comment_bloc">
	   		<%= render :partial => "items/comment", :collection => object.comments %>
		</div>
  	</div>
  
	<fieldset id="new_comment_form_box"> 
    	<p><%=I18n.t('general.your_comment')%> :</p>
		<% remote_form_for Comment.new, :url => comment_item_path(@current_object), :loading => "$('comment_box').writeAttribute('disabled')", :complete => "$('comment_box').writeAttribute('disabled', false);$('comment_box').value = ''" do |f| %>
		<%= f.text_area :text, :size => "90x8",:class => :comment_box, :id => :comment_box %>
       	<button type="submit" class="submit_button"><%=I18n.t('general.publish_my_comment')%></button>
	    <% end %>
	</fieldset>
</div>
