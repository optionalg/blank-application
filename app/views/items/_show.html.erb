<div id="content_show">
	<h1>
		<%= title %>
		<%= link_to '(edit)', :action => :edit %>
	</h1>
	
	<h2><%= object.title %></h2>
	
	<%= object.description %>
	
	
	<%= render :partial => "items/rating" %>
	
	<p id="tags">
		<strong>Tags:</strong>
		<span id="tag_list">
			<%= @current_object.tags.collect { |t| item_tag(t) }.join(' ')  %>
		</span>
	</p>
	
	
	<% if object.workspaces.size > 1 %>
		<p id="workspaces">
			<strong>DiffusÃ© dans les espaces de travail suivants:</strong>
			<%= object.workspaces.collect { |w| w.name }.join("&nbsp;") %>
		</p>
	<% end %>
	
		<%= capture(&block) %>
	
	<h2>Commentaires:</h2>
	<div id="comment_list">
		<%= render :partial => "items/comment", :collection => object.comments %>
	</div>
	
	<% remote_form_for Comment.new, :url => comment_item_path(@current_object), :loading => "$('comment_box').writeAttribute('disabled')", :complete => "$('comment_box').writeAttribute('disabled', false);$('comment_box').value = ''" do |f| %>
		<%= f.text_area :text, :class => :comment_box, :id => :comment_box %>
		<br>
		<%= f.submit 'Ajouter' %>
	<% end %>

</div>
