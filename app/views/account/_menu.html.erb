		<span class="titre">Filtrer</span><br>
		<ul>
			<% 
				[:article, :image, :artic_file, :video, :audio, :publication].each do |elem|
					model = elem.to_s.classify.constantize
					concat\
						content_tag(:li, link_to(model.label.pluralize, send("#{elem.to_s.pluralize}_path")),
							:style => "list-style-image:url(/images/#{model.icon});list-style-position:inside"),
						binding
				end
			%>
		</ul>
	</div>
