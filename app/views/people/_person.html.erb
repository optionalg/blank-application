
<table  cellspacing="5" border="0">
  <tr>
    <th> <%= I18n.t('people.field.email_label') %> </th>
    <th><%= I18n.t('people.index.name') %></th>
    <th><%= I18n.t('people.index.subscribed_on') %></th>
    <th> </th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td> <%= person.email %></td>
      <td><%=person.first_name%> <%= person.last_name%></td>
      <td> <%= I18n.l person.created_at, :format => :long %> </td>
      <td align="right">
      | <%= link_to I18n.t('general.link.display'), person_path(person) %>
      | <%= link_to I18n.t('general.link.edit'), edit_person_path(person) %>
      | <%= link_to I18n.t('general.link.delete'), person_path(person), :method => :delete, :confirm => I18n.t('people.index.delete_confirm') %>
      | <%= check_box_tag("person_#{person.id}","1",person.newsletter ,:class => "checkboxes", :onclick => remote_function(:url => {:controller => "people", :action => "update_newsletter_column" },  :with => "'id=#{person.id}&type=person&newsletter='+$('person_#{person.id}').checked", :complete => "document.body.style.cursor = 'default';", :loading => "document.body.style.cursor = 'wait';" ))%> </td>
    </tr>
  <% end %>
  <tr>
    <td colspan="4" align="center" style="padding-top:20px;">
        <%= remote_pagination(@people,ajax_index_people_path, 'content') %>
    </td>
  </tr>
</table>



