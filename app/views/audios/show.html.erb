<% item_show( :title => I18n.t('audio.field.audio_label'),  :object => @current_object ) do %>
	<h2><%=I18n.t('audio.field.audio_label')%></h2>
        <div id ="progress">
            <% if @current_object.state=="encoded" %>
              <%= render :partial => "player" %>
            <% elsif @current_object.state=="encoding"%>
              <%= render :partial => "status" %>
            <% else %>
               <%= @current_object.state.capitalize %>
           <% end %>
          </div>
	<br /><br /><%= link_to I18n.t('general.button.download'), @current_object.audio.url.split("?")[0] %><br />
<% end %>