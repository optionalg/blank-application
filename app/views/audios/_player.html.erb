<div id='player'></div>
<script type='text/javascript'>
  cancel=false;
  var so = new SWFObject('/videoplayer/player.swf','ply','470','20','9','#000000');
  so.addParam('allowfullscreen','true');
  so.addParam('allowscriptaccess','always');
  so.addParam('wmode','opaque');
  so.addParam('flashvars','&file=<%=File.dirname(@current_object.audio.url)%>/audio.mp3&backcolor=#D86C27');
  so.write('player');
</script>