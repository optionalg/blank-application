<% form_for_item current_object, title do |f| %>
    <% is_copyright = (current_object.state == 'copyright') ? true : false %>
    <div id="add_keyword">
      <%= f.text_field :url, :label => I18n.t('feed_source.field.url_label')+" : " ,:readonly => true %>
    </div>

    <%= f.text_field :copyright, :label => I18n.t('feed_source.field.copyright_label')+" : ", :readonly => is_copyright %>

    <% if is_copyright %>
      <%= f.datetime_select :last_updated, :label => I18n.t('feed_source.field.last_updated_label')+" :", :readonly => is_copyright %>

    <% else %>
      <div class="CommonMessage"><%=I18n.t('feed_source.new.automatic_date_field')%></div>
    <% end %>
<% end  %>