<div class="pubmed_item">
  <h3><%= link_to item.title, item.link, :popup=>['new_window'] %></h3>
  <h5><%= I18n.l(item.date_published :format => :long) %></h5>
  <div class="description"><%= item.description %></div>
  <div class="links">
    <%= image_tag("item_icons/Bookmark_add.png") %>
    <%= link_to I18n.t('feed_source.show.add_bookmark'), new_bookmark_path(:feed_item_id => item.id) %>
    <%# Specify the weight & width :popup=>['new_window','height=800,width=1024'] %>
  </div>
</div>