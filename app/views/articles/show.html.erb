<% item_show( :title => 'Article',  :object => @current_object ) do %>
	Introduction : <%= @current_object.introduction %><br />
	Corps : <%= @current_object.body %><br />
	Conclusion : <%= @current_object.conclusion %><br />

	Fichiers joints :<br />
	<% @current_object.article_files.each do |af| %>
		<%= af.file_path.split('/').last %><%= link_to "Télécharger", url_for_file_column(af, :file_path) %><br />
	<% end %>
<% end %>