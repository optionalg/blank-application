<div class="item-list">
	<div style="clear:left">
		<%= image_tag object.icon %>
		<%= link_to_item(object) %>
		<%=I18n.t('general.in')%> <%= links_to_workspace_collection(object.workspaces) %>
		<%=I18n.t('general.by')%> <%= link_to_user(object.user) %>
	</div>
	<div style="float:left">
		<%=I18n.t('general.on1')%> <%= I18n.l object.created_at, :format => :long %>
		<%=I18n.t('general.tag').pluralize%> : <%= object.tags.collect(&:name).join(', ') %> - 
		&nbsp;<%= object.comments.size %> <%=I18n.t('general.comment').pluralize%> -</div>
	<div style="float:left"><%= item_rate_locked(object) %></div>
</div>