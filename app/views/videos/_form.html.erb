<% form_for_item @current_object, title do |f| -%>
  <% f.field :video, :label => I18n.t('general.video')+' :' do %>
    <%= File.basename(@current_object.video.url) + '<br />' if @current_object.video.file? %>
    <%= file_field "video", 'video', :onChange=>"LimitAttach(this.form, this.form.video_video.value,'video')" %>
  <% end %>
<% end -%>
