<% form_for_item @current_object, title do |f| -%>
  <% f.field :file_path, :label => 'Fichier :' do %>
    <%= File.basename(@current_object.file_path) + '<br />' if @current_object.file_path %>
    <%= file_column_field "video", 'file_path', :onChange=>"LimitAttach(this.form, this.form.video_file_path.value,'video')" %>
  <% end %>
<% end -%>
