<fieldset class="myform">
  <legend><%= @language %></legend>
       <% form_for :res, :url => translations_changing_superadministration_path do |f| %>
             <label>Select a Section</label><%= select_tag "element", options_for_select([ "Select","general" ,"layout", "user","item", "home","workspace" ], "Select"),:onchange=>"changer(this.value)"%>
             <input id="language" name="language" type="hidden" value=<%= @language.to_s %>>
             <div id="general" style="display:none;">
             <%type='general'%>
             <table>
             <% if @res[type] %>
                 <% @res[type].each do |k, v| %>
                   <tr>
                      <td><%= k %></td>
                      <td><%= text_field type.to_sym, k, :value => v %></td>
                  </tr>
                 <% end %>
             <% else %>
                 Pas de champs pour cette partie.<br />
             <% end %>
              </table>
            </div>
	         <div id="layout" style="display:none;">
             <table>
             <%type='layout'%>
             <% if @res[type] %>
                <% @res[type].each do |k, v| %>
                    <tr>
                        <td><%= k %></td>
                        <td><%= text_field type.to_sym, k, :value => v %></td>
                    </tr>
                <% end %>
                
              <% end %>
              </table>
             
              </div>
             
            <div id="user" style="display:none;">
              <table>
              <%["user", "login"].each do |type|%>
                 <% if @res[type] %>
                    <% @res[type].each do |k, v| %>
                   <tr>
                     <td><%= k %></td>
                     <td><%= text_field type.to_sym, k, :value => v %></td>
                    </tr>
                    <% end %>
                 <% end %>
              <% end %>
              </table>
              </div>

            <div id="home" style="display:none;">
             <table>
             <%type='home'%>
             <% if @res[type] %>
                <% @res[type].each do |k, v| %>
                   <tr>
                    <td><%= k %></td>
                    <td><%= text_field type.to_sym, k, :value => v %></td>
                   </tr>
                <% end %>
              <% end %>
              </table>
             </div>

            <div id="workspace" style="display:none;">
              <table>
             <%type='workspace'%>
             <% if @res[type] %>
                <% @res[type].each do |k, v| %>
                    <tr>
                      <td><%= k %></td>
                      <td><%= text_field type.to_sym, k, :value => v %></td>
                    </tr>
                <% end %>
              <% end %>
              </table>
            </div>
            <div id="item" style="display:none;">
              <table>
              <%["item","file","audio","video","article","bookmark","publication"].each do |type|%>
                  <% if @res[type] %>
                    <% @res[type].each do |k, v| %>
                      <tr>
                         <td><%= k %></td>
                         <td><%= text_field type.to_sym, k, :value => v %></td>
                      </tr>
                    <% end %>
                 <% end %>
              <% end %>
              </table>
            </div>
