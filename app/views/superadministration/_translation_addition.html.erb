<fieldset>
  <legend>Add a key in the translations files xs</legend>

  <% form_for :res, :url => translations_new_superadministration_path do |f| %>

    <label>SECTION</label>
	<div class="formElement"><%= f.select :section, @translation_sections %></div>
	<label>SUBSECTION</label>
	<div class="formElement"><%= f.text_field :subsection %></div>
	<label>KEY</label>
    <div class="formElement"><%= f.text_field :key %></div>
    <% LANGUAGES.each do |l| %>
      <label>Translations for <%= l %> : </label>
	  <div class="formElement"><%= text_field_tag "translations[#{l}]" %></div>
    <% end %>  

    <%= f.submit %>
  <% end %>
</fieldset>