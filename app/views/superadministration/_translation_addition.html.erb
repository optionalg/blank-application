<fieldset class="myform">
  <legend>Add a key in the translations files</legend>

  <% form_for :res, :url => translations_new_superadministration_path do |f| %>

    Key definition :<br />

    SECTION                    SUBSECTION                   KEY<br />
    <%= f.select :section, @translation_sections %><%= f.text_field :subsection %><%= f.text_field :key %>
    <br /><br />
    Translations for the different languages :<br />
    <% LANGUAGES.each do |l| %>
      For <%= l %> : <%= text_field_tag "translations[#{l}]" %><br />
    <% end %>  

    <%= f.submit %>
<br><br>
    
  <% end %>

</fieldset>