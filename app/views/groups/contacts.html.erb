<br /><br />
<% form_for :contacts_workspaces, :url => contacts_workspace_groups_path(current_workspace.id), :html => { :method => :post } do |f| %>
<%= params[:order] == 'created_at' ? 'Ordered by time' : link_to('Ordered by time', contacts_workspace_groups_path(current_workspace.id)+'?order=created_at') %> |
<%= params[:order] == 'email' ? 'Ordered by email' : link_to('Ordered by email', contacts_workspace_groups_path(current_workspace.id)+'?order=email') %> &&
<%= params[:restriction] == 'all' ? 'All the contacts' : link_to('All the contacts', contacts_workspace_groups_path(current_workspace.id)+'?restriction=all') %> |
<%= params[:restriction] == 'non_linked' ? 'Contacts non-linked to a group' : link_to('Non-linked to a group', contacts_workspace_groups_path(current_workspace.id)+'?restriction=non_linked') %>
<br /><br />
<% @current_objects.each do |member| %>
  <%= "#{member['email']} (#{member['first_name']} #{member['last_name']}) -- #{member['contact_type']} -- #{member['state']}" %>
  <%= check_box_tag 'contacts_workspaces_ids[]', member['id'] %>
  <br />
<% end %>
<br /><br />
<u>Action :</u>
<%= radio_button_tag 'to_do', 'remove' %> Remove these contacts |
<%= radio_button_tag 'to_do', 'link' %> Link these contacts to the group : <%= select_tag 'group_id', options_for_select(current_workspace.groups.map{ |e| [e.title, e.id] }) %> |
<%= radio_button_tag 'to_do', 'unsubscribe' %> Unsubscribe these contacts
<br /><br />
  <%= submit_tag 'Do the action' %>
<% end %>
