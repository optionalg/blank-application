<% form_for_item @current_object, title do |f| -%>

  <% is_copyright = (@current_object.state == 'copyright') ? true : false %>
  
  <%= f.text_field :link, :label => I18n.t('general.link')+" : " , :readonly => is_copyright %>
  <%#= f.text_field :authors, :label => I18n.t('general.author').pluralize + " : ", :readonly => is_copyright %>
  <% if is_copyright %>
    <%= f.datetime_select :date_published, :label => I18n.t('general.publishing_date') + " :", :readonly => is_copyright %>
    <%#= f.datetime_select :last_updated, :label => "Dernière mise à jour :", :readonly => is_copyright %>
  <% else %>
    (Les champs concernant la date de publication et de la dernière mise sont gérés automatiquement.)<br />
  <% end %>
  <%= f.text_field :categories, :label => I18n.t('general.category').pluralize + " : ", :readonly => is_copyright %>
  <%= f.text_field :copyright, :label => I18n.t('general.copyright') + " : ", :readonly => is_copyright %>

<% end %>

