<h1>Enregistrer un nouvel utilisateur</h1>
<% @user.password = @user.password_confirmation = nil %>

<% form_for @user, :url => users_path, :html => {:multipart => true}, :builder => LabelFormBuilder do |f| -%>
	<%= f.text_field :login %>
	<%= f.text_field :email %>
	<%= f.password_field :password, :label => 'Mot de passe' %>
	<%= f.password_field :password_confirmation, :label => 'Confirmation' %>
	<%= f.text_field :lastname, :label => 'Nom' %>
	<%= f.text_field :firstname, :label => 'Prénom' %>
	<%= f.text_field :addr, :label => 'Addresse' %>
	<%= f.text_field :laboratory, :label => 'Laboratoire' %>
	<%= f.text_field :phone, :label => 'Téléphone (fixe)' %>
	<%= f.text_field :mobile, :label => 'Portable' %>
	<%= f.text_field :activity, :label => 'Activité' %>
	
	<p>
		<label for="user_image_path">Photo</label><br/>
		<%= image_tag(url_for_file_column(@user, 'image_path')) + '<br />' if @user.image_path %>
		<%= file_column_field 'user', 'image_path' %>
	</p>
	
	<%= f.text_area :edito, :label => 'Édito' %>
	<script type="text/javascript">
		bkLib.onDomLoaded(function() {
			new nicEditor({iconsPath : '/images/nicEditorIcons.gif'}).panelInstance('user_edito');
		});
	</script>

	<%= submit_tag 'Créer utilisateur' %>
<% end -%>
