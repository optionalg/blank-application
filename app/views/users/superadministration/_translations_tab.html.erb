<fieldset class="myform">
  <legend><%= @language %></legend>

	<% form_for :res, :url => user_translations_changing_path(current_user) do |f| %>
	
	<input id="language" name="language" type="hidden" value=<%= @language.to_s %>>
	
	<% ["layout", "form", "other"].each do |type| %>
		
		<%= type.upcase %><br /><br />
		
		<% if @res[type] %>
			<% @res[type].each do |k, v| %>
				<%= k %> : <%= text_field type.to_sym, k, :value => v %><br />
			<% end %>
		<% else %>
			Pas de champs pour cette partie.<br />
		<% end %>
		
		<br />
		
	<% end %>
		
