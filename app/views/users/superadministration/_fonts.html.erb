<fieldset class="myform">
  <legend>Fonts management</legend>
<%form_for(:fonts,:url=>fonts_url, :html=>{:method=>:post , :multipart=>true}) do |f| %>
    <%=f.label "Name"%><%=f.text_field :name%><br>
    <%=f.label "Type"%><%=f.text_field :type%><br>
    <%=f.label "Size"%>  <%=f.text_field :weight%><br>
    <%=f.submit "Save"%><br>
 <%end%>

</fieldset>
