<div id="area_POST_bis">
	<div id="area_PROFIL">
	  <%= image_tag @current_object.avatar.url(:thumb), :class => "avatar", :align => "left"%>
	  <h2>
	  	<%= @current_object.firstname %> <%= @current_object.lastname %>
		<%= link_to image_tag('icons/pencil.png'), edit_user_path, :class => "pencil" if permit? "edition of user" %>
	  </h2>
  	  
	  <p>
	  	<label><%=I18n.t('user.location')%>  : </label><%= @current_object.company %>
	  </p>
	  <p>
	    <label><%=I18n.t('user.activity')%> : </label><%= @current_object.activity %>
	  </p>
	  <p>
	  	<label><%=I18n.t('user.address')%> : </label><%= @current_object.address %>
	  </p>
	    <label><%=I18n.t('user.email')%> : </label> <%= @current_object.email %>
	  </p>
	  <p>	
	    <label><%=I18n.t('user.phone')%> : </label><%= @current_object.phone %>	- <%= @current_object.mobile %>
	  </p>
	  <p><%= @current_object.edito %></p>
	</div>
</div>
<div id="area_DROITS">
	<h2><%=I18n.t('user.access_rights')%></h2>
	<div class="item" >
		<p><label><%=I18n.t('user.system_administrator')%> : </label><%= @is_admin ? I18n.t('general.yes') : I18n.t('general.no1') %></p>
		<p><label><%=I18n.t('user.moderator')%> : </label><%= @moderated_ws.empty? ? I18n.t('general.yes') : I18n.t('general.no1') %></p>
		<p><label><%=I18n.t('user.rights_to_be_moderator')%> : </label><%= links_to_workspace_collection(@moderated_ws) || '- ' + I18n.t('general.void') + ' -' %></p>
		<p><label><%=I18n.t('user.writer')%> : </label><%= @writter_role_on_ws.empty? ? I18n.t('general.yes') : I18n.t('general.no1') %></p>
		<p><label><%=I18n.t('user.rights_to_manage')%> <%=I18n.t('general.workspace')%> : </label><%= links_to_workspace_collection(@writter_role_on_ws) || '-' + I18n.t('general.void') + ' -' %></p>
		<p><label><%=I18n.t('user.reader')%> : </label><%= @reader_role_on_ws.empty? ? I18n.t('general.yes') : I18n.t('general.no1') %></p>
		<p><label><%=I18n.t('user.readonly_access_to')%> : </label> <%= links_to_workspace_collection(@reader_role_on_ws) || '- ' + I18n.t('general.void')+ ' -' %></p>
	</div>
</div>
<div class="clear"></div>

