<fieldset class="myform">
  <legend><%=I18n.t('user.your_private_informations')%></legend>

  <% form_for @user,:builder => BlankFormBuilder, :html => {:multipart=> true} do |f| -%>
    <%= image_tag(@user.avatar.url(:thumb), :class => "avatar", :align => "right")%>
    <%= f.text_field :login, :label => I18n.t('user.login')+" * : ", :hint => "Select name for logging in" %>
    <%= f.text_field :email, :label => I18n.t('user.email')+" * : " %>
    <% if @user.new_record? %>
      <%= f.password_field :password, :label => I18n.t('user.password')+" * : " %>
      <%= f.password_field :password_confirmation, :label => I18n.t('user.confirm_password')+" * : " %>
    <% else %>
      <%= f.password_field :password, :label => I18n.t('user.password'), :hint => "Leave blank to keep old password" %>
      <%= f.password_field :password_confirmation, :label => I18n.t('user.confirm_password'), :hint => "Leave blank to keep old password" %>
    <% end %>
    <%= f.text_field :lastname, :label => I18n.t('user.name')+" * : " %>
    <%= f.text_field :firstname, :label => I18n.t('user.first_name')+" * : " %>
    <%= f.country_select :nationality,:label => I18n.t('user.nationality')+" * : " %>
    <%= f.text_area :address, :size => "40x6", :label => I18n.t('user.address')+" * : ", :hint => 'Votre adresse complète' %>
    <%= f.text_field :phone, :label => I18n.t('user.phone')+" * : ", :hint => 'Numéro professionnel' %>
    <%= f.text_field :mobile, :label => I18n.t('user.mobile')+" * : ", :hint => 'Numéro de téléphone portable' %>
    <%= f.text_field :company, :label => I18n.t('user.location')+" * : ", :hint => 'Pour qui travaillez-vous ?' %>
    <%= f.text_area :activity, :size => "40x6", :label => I18n.t('user.activity')+" * : " %>
    <%= f.text_area :edito, :size => "40x6", :label => I18n.t('user.edito')+" : " %>
    <% f.field :avatar, :label => I18n.t('user.photo')+" : " do %>
      <%= file_field 'user', 'avatar' %>
    <% end %>
	<% button_text = current_object.new_record? ? I18n.t('user.create_this_user') : I18n.t('general.update') %>
    <button type="submit" class="submit_button"><%= button_text%></button>
  <% end %>

</fieldset>
