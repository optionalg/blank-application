<h1>System Roles List :</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% for role in @system_roles %>
    <tr>
      <td><%=h role.name %></td>
      <td><%=h role.description %></td>
      <td><%= link_to 'Edit', edit_role_path(role.id) %></td>
      <td><%= link_to 'Delete', role_path(role.id), :confirm => 'Are you sure ?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

