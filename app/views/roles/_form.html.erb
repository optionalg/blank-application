<%= f.error_messages %>

<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <b>Role type : </b>
  <%= @role.type_role %><br />
  <%= f.hidden_field :type_role, :value => @role.type_role %>
</p>
<p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</p>
<p>
  <b>Permissions selection : </b><br />
  <% @permissions.each do |p| %>
    (<%= p.type_permission %>) <%= p.name %> <%= check_box_tag("permissions[#{p.id}]", "1", @role.permissions.include?(p), :class => "checkboxes") %><br />
  <% end %>
</p>

