<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <link rel="shortcut icon" href="<%= @configuration['sa_favicon_url'] %>"/>
    <meta http-equiv="X-UA-Compatible" content="IE=7" />
    <%= stylesheet_link_tag "blank"  %>
	<%= stylesheet_link_tag "blank_JQ"  %>
    <%= stylesheet_link_tag "starbox" %>
    <!--[if IE]>
      <link rel="stylesheet" type="text/css" href="/stylesheets/ie.css" />
    <![endif]-->

	

    <title>
      <%= I18n.t 'layout.application.title' %> -
      <% if @content_for_title %>
        <%= h yield(:title) %>
      <% else %>
        <%= params[:action].capitalize if params[:action] != 'index' %>
        <%= params[:controller].capitalize %>
      <% end %>
    </title>

    <script type="text/javascript" src="/javascripts/jquery.js"></script>
	<script type="text/javascript" src="/javascripts/jquery.corner.js"></script>
	<script type="text/javascript" src="/javascripts/jquery-fx.js"></script>
	<script type="text/javascript" src="/javascripts/jrails.js"></script>
	<script type="text/javascript" src="/javascripts/blank.js"></script>

    <% if params[:action] != 'new' and params[:action] != 'edit' %>
    <script>
      Ajax.Responders.register({
        onCreate: function(){ $('ajax_spinner').style.display = 'block' },
        onComplete: function(){ $('ajax_spinner').style.display = 'none' }
        });
    </script>
    <% end %>

  </head>

  <body>
    <div id="page_container">
      <div id="header">
        <%= render :partial => "layouts/header"%>
      </div>
      <div id="container">
        <div id="middle-middle">
          <%= content_tag(:div, flash[:notice], :class => 'notice') if flash[:notice] %>
          <%= content_tag(:div, flash[:error], :class => 'error') if flash[:error] %>
          <%= yield %>
        </div>
      </div>
      <div id="footer">
        <%= render :partial => "layouts/footer"%>
      </div>
    </div>
    <div id="ajax_spinner"><img src="/images/ajax-spinner.gif"></div>
  </body>
</html>

